<BorderPane prefHeight="770.0" prefWidth="941.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.databaseexample.DatabaseSQLiteControllerGame1">
    <top>
        <BorderPane styleClass="header-section" stylesheets="@demo.css">
            <left>
                <Label id="header-text" text="Games Store" />
            </left>
            <right>

            </right>
        </BorderPane>
    </top>
   
    <center>
        <VBox fx:id="vBox" minHeight="600.0" prefHeight="500.0" styleClass="content-section">
            <children>
                <Label id="content-header" stylesheets="@demo.css" text="   Buy and Search Games " textFill="#11c3c6" />
            
                <!-- container using pref size as max size to not grow larger than the image -->
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" styleClass="my-rect" stylesheets="@demo.css" />  
            
            
                <Label id="content" styleClass="content-section" stylesheets="@demo.css" text="Here you can buy and search for games to add to your library!" />
                <TableView fx:id="tableView" onMouseClicked="#showRowData" prefHeight="547.0" prefWidth="600.0" />
                
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <children>
                    <TextField fx:id="titleTextField" prefWidth="100.0" promptText="Title" stylesheets="@styles.css" />
                    <TextField fx:id="publisherTextField" prefWidth="100.0" promptText="Publisher" stylesheets="@styles.css" />
                    <TextField fx:id="orig_priceTextField" prefWidth="100.0" promptText="Price" stylesheets="@styles.css" />
                    <TextField fx:id="salePercentTextField" prefWidth="100.0" promptText="Sale Percent" stylesheets="@styles.css" />
                    <TextField fx:id="userRatingTextField" prefWidth="100.0" promptText="User Rating" stylesheets="@styles.css" />
                    <TextField fx:id="downloadsTextField" prefWidth="100.0" promptText="Downloads" stylesheets="@styles.css" />
                </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#handleShowAllRecords" prefHeight="34.0" prefWidth="116.0" styleClass="btn-danger" stylesheets="@styles.css" text="Show All" />
                    <Button mnemonicParsing="false" onAction="#handleAddGame_toClient" prefHeight="34.0" prefWidth="300.0" styleClass="btn-primary" stylesheets="@styles.css" text="Add New Game to your Library" />
                    <Button mnemonicParsing="false" onAction="#handleSearchAction" prefHeight="34.0" prefWidth="116.0" styleClass="btn-danger" stylesheets="@styles.css" text="Search Game " />
                    
                </children>
            </HBox>
                
            </children>
            </VBox>

               
        

