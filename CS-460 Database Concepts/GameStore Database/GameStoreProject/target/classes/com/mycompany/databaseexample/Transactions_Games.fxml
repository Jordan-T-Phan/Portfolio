                <Label fx:id="footerLabel" alignment="CENTER" prefHeight="31.0" prefWidth="600.0" styleClass="footer" stylesheets="@demo.css" text="Copyright 2023 Jordan, William, and Matthew">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
